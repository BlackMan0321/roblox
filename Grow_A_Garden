local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local screenGui = Instance.new("ScreenGui", playerGui)
screenGui.Name = "GardenUI"
screenGui.ResetOnSpawn = false
local panel = Instance.new("Frame", screenGui)
panel.Size = UDim2.new(0, 220, 0, 300)
panel.Position = UDim2.new(0.5, -110, 0.5, -150)
panel.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
panel.BorderSizePixel = 2
panel.BorderColor3 = Color3.fromRGB(80, 80, 80)
panel.Name = "GardenPanel"
local title = Instance.new("TextLabel", panel)
title.Size = UDim2.new(1, 0, 0, 60)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundTransparency = 1
title.Text = "Grow A Garden"
title.TextScaled = true
title.Font = Enum.Font.GothamBold
title.TextColor3 = Color3.fromRGB(255, 255, 255)
local collectRow = Instance.new("Frame", panel)
collectRow.Size = UDim2.new(1, 0, 0, 50)
collectRow.Position = UDim2.new(0, 0, 0, 60)
collectRow.BackgroundTransparency = 1
local collectLabel = Instance.new("TextLabel", collectRow)
collectLabel.Size = UDim2.new(0.7, -10, 1, 0)
collectLabel.Position = UDim2.new(0, 10, 0, 0)
collectLabel.BackgroundTransparency = 1
collectLabel.Text = "Collect"
collectLabel.TextScaled = true
collectLabel.Font = Enum.Font.GothamSemibold
collectLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
local tickButton = Instance.new("TextButton", collectRow)
tickButton.Size = UDim2.new(0, 40, 0, 40)
tickButton.Position = UDim2.new(1, -50, 0.5, -20)
tickButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
tickButton.Text = ""
tickButton.Name = "TickButton"
tickButton.BorderColor3 = Color3.fromRGB(100, 100, 100)
local toggled = false
tickButton.MouseButton1Click:Connect(function()
	toggled = not toggled
	if toggled then
		tickButton.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
	else
		tickButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
	end
end)
local credit = Instance.new("TextLabel", panel)
credit.Size = UDim2.new(1, 0, 0, 20)
credit.Position = UDim2.new(0, 0, 1, -20)
credit.BackgroundTransparency = 1
credit.Text = "Made By BlackMan"
credit.TextScaled = true
credit.Font = Enum.Font.Gotham
credit.TextColor3 = Color3.fromRGB(180, 180, 180)
